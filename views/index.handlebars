<h1>Eat-da-Burger</h1>
<img class="smaller-image center-block" src="/assets/images/burger.png" alt="hamburger">

<div class="container">
    <div class="row">
        <div class="col-sm-6">
            <h2>My Burgers</h2>
            <ul>
                {{#each burgers}}
                    {{#unless this.devoured}}
                        <li>
                            <p>{{this.name}}</p>

                            <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="true">
                                <button class="btn btn-danger" type="submit">DEVOUR</button>
                            </form>

                        </li>
                    {{/unless}}
                {{/each}}        
            </ul>
        </div>

        <div class="col-sm-6">
            <h2>Devoured Burgers</h2>
            <ul>
                {{#each burgers}}
                    {{#if this.devoured}}
                        <li>
                            <p>{{this.name}}</p>

                        </li>
                    {{/if}} 
                {{/each}}         
            </ul>
        </div>
    </div>

    <div class="row">
        <h2>Add a Burger</h2>
        <form class="create-update-form" action="/" method="POST">
            
            <div class="form-group">
                <label for="ca">Burger Name:</label>
                <input type="text" name="name">
                <button type="submit">Add Burger</button>
            </div>

        </form>
    </div>

</div>